<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.rache.app_idv_tabs.MainActivity"
        android:weightSum="1"
        android:background="@drawable/cutesquare">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Title: "
                android:id="@+id/titleView"
                android:textColor="@android:color/holo_orange_light" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleEditText"
                android:layout_weight="1"
                android:minWidth="@dimen/abc_search_view_preferred_width"
                android:textIsSelectable="false"
                android:maxLength="30"
                android:textColor="@android:color/holo_orange_light"
                android:inputType="text"
                android:lines="1"
                android:hint="@string/title_hint"
                android:textColorHint="@android:color/darker_gray"
                android:cursorVisible="false"
                android:contextClickable="false"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:enabled="true"
                android:imeOptions="actionDone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_weight="0.10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Tags: "
                android:id="@+id/tagView"
                android:textColor="@android:color/holo_orange_light" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tagEditText"
                android:layout_weight="1"
                android:minWidth="@dimen/abc_search_view_preferred_width"
                android:textIsSelectable="false"
                android:minHeight="@android:dimen/notification_large_icon_height"
                android:inputType="text"
                android:hint="@string/tag_hint"
                android:textColor="@android:color/holo_orange_light"
                android:textColorHint="@android:color/darker_gray"
                android:maxLength="53"
                android:textColorHighlight="@android:color/holo_orange_light"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:enabled="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Explicit: "
                android:id="@+id/explictView"
                android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
                android:textColor="@android:color/holo_orange_light" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/explicitCheckBox"
                android:gravity="right"
                android:theme="@style/White"
                android:checked="false"
                android:textColor="@android:color/holo_orange_light"
                app:buttonTint="@android:color/holo_orange_light" />
        </LinearLayout>


        <LinearLayout
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
            android:layout_width="287dp"
            android:gravity="center">

            <EditText
                android:layout_width="28dp"
                android:layout_height="wrap_content"
                android:id="@+id/recordTimer"
                android:enabled="false"
                android:minWidth="@dimen/abc_search_view_preferred_width"
                android:textIsSelectable="false"
                android:textColor="@android:color/holo_orange_light"
                android:inputType="text"
                android:lines="1"
                android:cursorVisible="false"/>

            <Button
                android:layout_width="wrap_content"
                android:text="Record"
                android:id="@+id/recordButton"
                android:layout_height="48dp" />

            <Button
                android:text="Stop Record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stopRecordButton" />
        </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
        android:layout_width="295dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview"
            android:id="@+id/previewButton"
            android:layout_gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/abc_action_bar_overflow_padding_end_material"
        android:layout_width="299dp"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload"
            android:id="@+id/uploadButton"
            android:gravity="center" />
    </LinearLayout>


    </LinearLayout>


</FrameLayout>
